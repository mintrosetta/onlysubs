@model IEnumerable<SearchResponse>
@{
    ViewData["Title"] = "Search";
}
<div class="container" style="width: 500px; margin-top: 120px;">
    @if (Model != null)
    {
        @foreach (var item in Model)
        {
            <div class="account-contanier mt-5">
                <div class="account-img">
                    <img src="@Url.Content($"~/wwwroot/images/{@item.ImageName}")">
                </div>
                <div class="account-detail">
                    <a href="/account/@item.Username" style="color: black; text-decoration: none;">
                        <h3>@item.Username</h3>
                    </a>
                    <div class="account-detail-follow">
                        <span class="account-detail-follower">@item.Follower follower</span>
                        <span class="account-detail-followimg">@item.Following following</span>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <h1 class="no-posts text-center" style="margin-top: 120px;">Account not found :(</h1>
    }

</div>